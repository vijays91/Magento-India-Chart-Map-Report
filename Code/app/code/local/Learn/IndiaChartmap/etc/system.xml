<?xml version="1.0"?>
<config>
    <tabs>
        <myconf_vijaystore translate="label" module="indiachartmap">
            <label>India Chart Map</label>
            <sort_order>100</sort_order>
        </myconf_vijaystore>
    </tabs>	
	
    <sections>
        <indiachartmap_tab translate="label" module="indiachartmap">
            <label>India Chart Map</label>
            <tab>myconf_vijaystore</tab>
            <sort_order>12</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <indiachartmap_setting translate="label comment">
                    <label>India Map Setting</label>
                    <sort_order>550</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                      <indiachartmap_bgcolor translate="label comment">
                            <label>Background Color</label>
							<frontend_model>indiachartmap/adminhtml_system_config_form_field_colorpicker</frontend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </indiachartmap_bgcolor>
						<indiachartmap_bordercolor translate="label comment">
                            <label>Border Color</label>
							<!-- <frontend_type>text</frontend_type> -->
							<frontend_model>indiachartmap/adminhtml_system_config_form_field_colorpicker</frontend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </indiachartmap_bordercolor>		
						<indiachartmap_color translate="label comment">
                            <label>Color</label>
							<!-- <frontend_type>text</frontend_type> -->
							<frontend_model>indiachartmap/adminhtml_system_config_form_field_colorpicker</frontend_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </indiachartmap_color>
                        
						<jquery_enable translate="label comment">
                            <label>jQuery Js (for Backend)</label>
							<frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
							<comment>jQuery Js Enable/Disable</comment>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </jquery_enable>						
                     </fields>
                </indiachartmap_setting>		
            </groups>
        </indiachartmap_tab>
    </sections>
</config>